<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@color/primaryColor"></item>

    <item>
        <rotate
            android:fromDegrees="55"
            android:pivotX="100%"
            android:pivotY="2%">
            <shape

                android:shape="rectangle">
                <solid android:color="#7FC4BD" />
            </shape>
        </rotate>
    </item>

    <item>
        <rotate
            android:fromDegrees="55"
            android:pivotX="100%"
            android:pivotY="0%">
            <shape

                android:shape="rectangle">
                <solid android:color="@color/tertiaryColor" />
            </shape>
        </rotate>
    </item>
</layer-list>