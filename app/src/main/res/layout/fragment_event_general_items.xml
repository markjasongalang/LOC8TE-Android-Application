<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/general_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Event Title"
        android:paddingTop="10sp"
        android:paddingHorizontal="15sp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:fontFamily="@font/open_sans_light"
        android:textColor="@color/secondaryColor" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10sp">

        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:src="@drawable/icon_location_orange"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/general_item_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:fontFamily="@font/open_sans_light"
            android:textColor="@color/secondaryColorLight"
            android:text="@string/sample_text"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_light"
                    android:text="Hosted by"
                    android:textColor="@color/secondaryColorLight"
                    android:textSize="10sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/host_img"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/icon_profile"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.CircularBorder"
                        android:scaleType="centerCrop"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="5dp">

                        <TextView
                            android:id="@+id/general_item_hostname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="8dp"
                            android:text="Name"
                            android:textStyle="bold"
                            android:fontFamily="@font/open_sans_light"
                            android:textColor="@color/tertiaryColor"/>
                        <TextView
                            android:id="@+id/general_item_hostJob"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="8dp"
                            android:text="Profession"
                            android:textStyle="bold"
                            android:fontFamily="@font/open_sans_light"
                            android:textColor="@color/fifthColor"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_light"
                    android:text="Time 	&#38; Date"
                    android:textColor="@color/secondaryColorLight"
                    android:textSize="10sp"
                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/general_item_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8dp"
                    android:text="00/00/0000"
                    android:textStyle="bold"
                    android:fontFamily="@font/open_sans_light"
                    android:textColor="@color/tertiaryColor"/>

                <TextView
                    android:id="@+id/general_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8dp"
                    android:text="00:00AM - 00:00PM"
                    android:textStyle="bold"
                    android:fontFamily="@font/open_sans_light"
                    android:textColor="@color/fifthColor"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:paddingRight="20dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_view"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:background="@drawable/tertiary_color_round_corners_button"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

    </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>



