<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chat_container">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/chat_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/anya"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.CircularBorder"/>

    <TextView
        android:id="@+id/chat_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/chat_img"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:text="Anya Forger"
        android:textSize="17sp"
        android:textColor="@color/secondaryColor"
        android:fontFamily="@font/open_sans_bold"
        android:paddingRight="10dp"
        android:ellipsize="end"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/chat_occupation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/chat_img"
        android:layout_below="@id/chat_name"
        android:layout_marginTop="-3dp"
        android:layout_marginStart="20dp"
        android:text="Batang Pasaway"
        android:textSize="13sp"
        android:fontFamily="@font/open_sans_semi_bold"
        android:textColor="@color/secondaryColorLight"
        android:paddingRight="10dp"
        android:ellipsize="end"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/chat_msgprev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/chat_img"
        android:layout_below="@id/chat_occupation"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:text="Anya: Waku waku!"
        android:paddingRight="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="15sp"
        android:fontFamily="@font/open_sans_light"
        android:textColor="@color/fifthColor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/chat_img"
        android:layout_marginTop="10dp"
        android:background="@color/fifthColor"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

</RelativeLayout>