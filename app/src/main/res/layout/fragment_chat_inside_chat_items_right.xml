<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/insidechat_img_right"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_profile"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.CircularBorder" />

    <TextView
        android:id="@+id/insidechat_msg_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="15dp"
        android:layout_toStartOf="@id/insidechat_img_right"
        android:background="@drawable/white_chat_bubble"
        android:fontFamily="@font/open_sans_light"
        android:padding="10dp"
        android:textColor="@color/primaryColor"
        android:textSize="15sp" />

</RelativeLayout>