<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primaryColor"
        android:orientation="vertical"
        tools:context=".AdminActivity2">

        <TextView
            android:id="@+id/front_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tertiaryColor"
            android:fontFamily="@font/open_sans_light"
            android:paddingVertical="15dp"
            android:text="Admin Dashboard"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginVertical="40dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="20dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/accept_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/accept_button"
                    android:fontFamily="@font/open_sans_bold"
                    android:text="approve"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/reject_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/reject_button"
                    android:fontFamily="@font/open_sans_bold"
                    android:text="reject"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />
            </LinearLayout>

            <TextView
                android:id="@+id/prof_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="175dp"
                android:layout_marginTop="100dp"
                android:fontFamily="@font/open_sans"
                android:text="Name"
                android:textColor="@color/primaryColor"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/prof_name2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="175dp"
                android:layout_marginTop="120dp"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/secondaryColor"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/prof_work"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="175dp"
                android:layout_marginTop="155dp"
                android:fontFamily="@font/open_sans"
                android:text="Occupation"
                android:textColor="@color/primaryColor"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/prof_work2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="175dp"
                android:layout_marginTop="175dp"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/secondaryColor"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/prof_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="240dp"
                android:fontFamily="@font/open_sans"
                android:text="First Name"
                android:textColor="@color/primaryColor"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/prof_middle_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="265dp"
                android:fontFamily="@font/open_sans"
                android:text="Middle Name"
                android:textColor="@color/primaryColor"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/prof_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="290dp"
                android:fontFamily="@font/open_sans"
                android:text="Last Name"
                android:textColor="@color/primaryColor"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/prof_bday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="315dp"
                android:fontFamily="@font/open_sans"
                android:text="Date of Birth"
                android:textColor="@color/primaryColor"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/prof_fist_name2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="145dp"
                android:layout_marginTop="240dp"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/secondaryColor"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/prof_middle_name2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="145dp"
                android:layout_marginTop="265dp"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/secondaryColor"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/prof_last_name2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="145dp"
                android:layout_marginTop="290dp"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/secondaryColor"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/prof_bday2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="145dp"
                android:layout_marginTop="315dp"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/secondaryColor"
                android:textSize="12sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/prof_profile_pic"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="90dp"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_profile"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.CircularBorder" />

            </LinearLayout>

            <TextView
                android:id="@+id/proof_valid_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="360dp"
                android:fontFamily="@font/open_sans"
                android:text="Proof of Valid ID"
                android:textColor="@color/primaryColor"
                android:textSize="17sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/prof_id_pic"
                    android:layout_width="350dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center"
                    android:layout_marginVertical="390dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/type_of_valid_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="570dp"
                android:fontFamily="@font/open_sans"
                android:text="Type of ID Submitted"
                android:textColor="@color/primaryColor"
                android:textSize="17sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_id_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="605dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/white_round_corners_10"
                android:fontFamily="@font/open_sans" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="670dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_ids"
                    android:layout_width="350dp"
                    android:layout_height="185dp"
                    android:layout_gravity="center" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
