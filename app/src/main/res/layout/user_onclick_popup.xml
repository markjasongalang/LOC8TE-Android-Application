<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/white_round_corners_20"
    android:paddingHorizontal="20dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="left">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="15dp"
            android:fontFamily="@font/open_sans"
            android:textStyle="bold"
            android:textColor="@color/secondaryColor"
            android:lines="1"
            android:maxLines="1"
            android:gravity="center"
            android:text="User Name"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/user_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="10dp"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/secondaryColorLight"
            android:lines="1"
            android:maxLines="1"
            android:gravity="center"
            android:text="User Location"/>

        <TextView
            android:id="@+id/user_specific_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="10dp"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/primaryColor"
            android:lines="1"
            android:maxLines="1"
            android:gravity="center"
            android:text="User Specific Job"/>

        <TextView
            android:id="@+id/user_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="10dp"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/primaryColor"
            android:lines="1"
            android:maxLines="1"
            android:gravity="center"
            android:text="User Field" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_location"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/tertiary_color_round_button_location"
            android:fontFamily="@font/open_sans"
            android:layout_margin="3dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>



</androidx.constraintlayout.widget.ConstraintLayout>