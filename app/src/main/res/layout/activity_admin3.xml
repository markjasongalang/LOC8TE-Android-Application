<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="375dp"
    android:background="@color/primaryColor"
    android:orientation="vertical"
    tools:context=".AdminActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginVertical="0dp"
        android:layout_marginRight="130dp"
        android:layout_marginLeft="-12dp"
        app:cardBackgroundColor="@color/tertiaryColor"
        app:cardCornerRadius="15dp"
        app:cardElevation="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reason_for_rejection2"
                android:layout_width="259dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="10.5dp"
                android:fontFamily="@font/open_sans"
                android:text="Reason for Rejection"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical">


            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="425dp"
        android:layout_height="350dp"
        android:layout_marginTop="-10dp"
        android:layout_marginLeft="-15dp"
        app:cardBackgroundColor="@color/tertiaryColor"
        app:cardCornerRadius="25dp"
        app:cardElevation="50dp">



        <Button
            android:id="@+id/reject_admin"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_marginLeft="195dp"
            android:layout_marginStart="280dp"
            android:layout_marginTop="285dp"
            android:background="@drawable/reject_button2"
            android:fontFamily="@font/open_sans_bold"
            android:text="Save"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textStyle="bold"

            />

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="45dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="25dp"
        app:cardElevation="50dp">

        <TextView
            android:id="@+id/reason_for_rejection3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="14.5dp"
            android:fontFamily="@font/open_sans"
            android:text="Mismatch of the profile picture and driver's license picture."
            android:textColor="@color/primaryColor"
            android:textSize="15sp"
            android:textStyle="bold" />


    </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>



</LinearLayout>