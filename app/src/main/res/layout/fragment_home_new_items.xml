<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fourth_color_round_corners_10">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/newlist_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/anya"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.CircularBorder"/>
    
    <TextView
        android:id="@+id/newlist_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/newlist_img"
        android:layout_marginTop="5dp"
        android:text="Anya Forger"
        android:textSize="17sp"
        android:textColor="@color/secondaryColor"
        android:fontFamily="@font/open_sans_bold"
        android:paddingRight="10dp"
        android:ellipsize="end"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/newlist_occupation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/newlist_img"
        android:layout_below="@id/newlist_name"
        android:layout_marginTop="-3dp"
        android:text="Batang Pasaway"
        android:textSize="12sp"
        android:fontFamily="@font/open_sans_semi_bold"
        android:textColor="@color/secondaryColorLight"
        android:paddingRight="10dp"
        android:ellipsize="end"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/newlist_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/newlist_img"
        android:layout_below="@id/newlist_occupation"
        android:layout_marginTop="10sp"
        android:text="8km away"
        android:textSize="15sp"
        android:fontFamily="@font/open_sans_light_italic"
        android:textColor="@color/fifthColor"
        android:paddingRight="10dp"
        android:ellipsize="end"
        android:maxLines="1"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/newlist_profile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/newlist_occupation"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:background="@drawable/tertiary_color_round_button_profile"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/newlist_chat"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/newlist_occupation"
        android:layout_toLeftOf="@id/newlist_profile"
        android:layout_marginRight="5dp"
        android:background="@drawable/tertiary_color_round_button_chat"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/newlist_img"
        android:layout_marginTop="10dp"/>

</RelativeLayout>